<h2 class="danzerpress-title" style="margin-bottom: 40px;">{{ layout.section_title }}</h2>
<div class="danzerpress-four-fifths danzerpress-col-center">
    <p style="text-align:center;">{{ layout.section_description }}</p>
    <div class="danzerpress-flex-row danzerpress-row-fix">
        {% for sub in layout.testimonial_blocks %}
            <div class="danzerpress-col-3 wow fadeInUp">
                <div class="danzerpress-content danzerpress-shadow-3 danzerpress-box danzerpress-background">
                    {{ (sub.testimonial_image) ? '<p><img alt="' ~ Image(sub.testimonial_image).alt ~ '" src="' ~ Image(sub.testimonial_image).src ~ '"></p>' : "" }}
                    <p>"{{ sub.testimonial_content }}"</p>
                    <p class="stars">{{ dp.get_stars(sub.testimonial_stars) }}</p>
                    <p><strong>{{ sub.testimonial_name }}</strong></p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>